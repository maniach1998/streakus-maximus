<div class="mb-8 text-center">
  <h1>Welcome back</h1>
  <p class="text-muted-foreground">
    Login to your account to continue tracking your habits
  </p>

  {{#if isNewUser}}
  <div class="mt-5 p-4 bg-primary/10 border border-primary/20 rounded-md">
    <p class="text-primary text-sm font-medium">
      Your account has been created, {{newUser.firstName}}! Please sign in to continue.
    </p>
  </div>
  {{/if}}
</div>

<form action="/auth/login" method="POST" class="space-y-6" data-form="login">
  <div class="space-y-2">
    <label for="email" class="text-sm font-medium">
      Email address
      <span class="text-destructive">*</span>
    </label>
    <input type="email" name="email" id="email" value="{{email}}" required placeholder="name@example.com"
      data-input="email" class="{{#if error.email}}border-destructive{{/if}}" />
    <p class="text-destructive text-sm" data-error="email">
      {{#if error.email}}{{error.email}}{{/if}}
    </p>
  </div>

  <div class="space-y-2">
    <label for="password" class="text-sm font-medium">
      Password
      <span class="text-destructive">*</span>
    </label>
    <input type="password" name="password" id="password" value="{{password}}" required placeholder="Enter your password"
      data-input="password" class="{{#if error.password}}border-destructive{{/if}}" />
    <p class="text-destructive text-sm" data-error="password">
      {{#if error.password}}{{error.password}}{{/if}}
    </p>
  </div>

  {{#if error.general}}
  <div class="p-3 bg-destructive/50 border border-destructive/20 rounded-md">
    <p class="text-destructive-foreground text-sm font-medium" data-error="general">{{error.general}}</p>
  </div>
  {{/if}}

  <button type="submit" class="w-full">
    Sign in
  </button>
</form>

<div class="mt-6">
  <p class="text-center text-muted-foreground">
    Don't have an account?
    <a href="/auth/sign-up" class="text-primary hover:text-primary/80 hover:underline transition-colors ml-1">
      Sign up
    </a>
  </p>
</div>

<script src="/public/js/login.js"></script>