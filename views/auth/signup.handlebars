<div class="mb-8 text-center">
	<h1>Create an account</h1>
	<p class="text-muted-foreground">
		Start your journey to building better habits
	</p>
</div>


<form action="/auth/sign-up" method="POST" class="space-y-6" data-form="signup">
	<div class="space-y-2">
		<label for="firstName" class="text-sm font-medium">
			First Name
			<span class="text-destructive">*</span>
		</label>
		<input type="text" name="firstName" id="firstName" value="{{firstName}}" required placeholder="John"
			data-input="firstName" class="{{#if error.firstName}}border-destructive{{/if}}" />
		<p class="text-destructive text-sm font-medium" data-error="firstName">
			{{#if error.firstName}}{{error.firstName}}{{/if}}
		</p>
	</div>

	<div class="space-y-2">
		<label for="lastName" class="text-sm font-medium">
			Last Name
			<span class="text-destructive">*</span>
		</label>
		<input type="text" name="lastName" id="lastName" value="{{lastName}}" required placeholder="Doe"
			data-input="lastName" class="{{#if error.lastName}}border-destructive{{/if}}" />
		<p class="text-destructive text-sm font-medium" data-error="lastName">
			{{#if error.lastName}}{{error.lastName}}{{/if}}
		</p>
	</div>

	<div class="space-y-2">
		<label for="email" class="text-sm font-medium">
			Email address
			<span class="text-destructive">*</span>
		</label>
		<input type="email" name="email" id="email" value="{{email}}" required placeholder="name@example.com"
			data-input="email" class="{{#if error.email}}border-destructive{{/if}}" />
		<p class="text-destructive text-sm font-medium" data-error="email">
			{{#if error.email}}{{error.email}}{{/if}}
		</p>
		{{#unless error.email}}
		<p class="text-muted-foreground text-sm">We'll use this email to send you important updates and notifications.</p>
		{{/unless}}
	</div>

	<div class="space-y-2">
		<label for="password" class="text-sm font-medium">
			Password
			<span class="text-destructive">*</span>
		</label>
		<input type="password" name="password" id="password" value="{{password}}" required
			placeholder="Create a strong password" data-input="password"
			class="{{#if error.password}}border-destructive{{/if}}" />
		<p class="text-destructive text-sm font-medium" data-error="password">
			{{#if error.password}}{{error.password}}{{/if}}
		</p>
		{{#unless error.password}}
		<p class="text-muted-foreground text-sm">When you create a password, it should be at least 8 characters long.</p>
		{{/unless}}
	</div>

	{{#if error.general}}
	<div class="p-3 bg-destructive/50 border border-destructive/20 rounded-md">
		<p class="text-destructive-foreground text-sm font-medium">{{error.general}}</p>
	</div>
	{{/if}}

	<button type="submit" class="w-full">
		Create account
	</button>
</form>

<div class="mt-6">
	<p class="text-center text-muted-foreground">
		Already have an account?
		<a href="/auth/login" class="text-primary hover:text-primary/80 hover:underline transition-colors ml-1">
			Log in
		</a>
	</p>
</div>

<script src="/public/js/signup.js"></script>