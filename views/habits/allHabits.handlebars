{{!-- Header Section --}}
<div class="mb-8">
  <a href="/dashboard" class="text-primary hover:text-primary/80"><- Back to dashboard</a>
      <div class="flex items-center justify-between mt-4">
        <h1>Your Habits</h1>
        <a href="/habits/new" class="button">
          <i data-lucide="plus" class="size-4"></i>
          Create New Habit
        </a>
      </div>
</div>

{{!-- Active Habits Section --}}
<div class="mb-12">
  <div class="flex items-center justify-between mb-4">
    <h2>Active Habits
      <span class="text-primary text-base">
        ( {{activeHabits.length}} )
      </span>
    </h2>
  </div>

  {{#if activeHabits.length}}
  <div class="grid grid-cols-1 gap-5">
    {{#each activeHabits}}
    {{> habitCard this}}
    {{/each}}
  </div>
  {{else}}
  <div class="bg-muted rounded-lg p-8 text-center">
    <p class="text-sm text-muted-foreground">No active habits yet</p>
    <a href="/habits/new" class="text-primary hover:text-primary/80 mt-2 inline-block">
      Create your first habit ->
    </a>
  </div>
  {{/if}}
</div>

{{!-- Inactive Habits Section --}}
<div>
  <div class="flex items-center justify-between mb-4">
    <h2>Inactive Habits
      <span class="text-muted-foreground text-base">
        ( {{inactiveHabits.length}} )
      </span>
    </h2>
  </div>

  {{#if inactiveHabits.length}}
  <div class="grid grid-cols-1 gap-5">
    {{#each inactiveHabits}}
    {{> habitCard this}}
    {{/each}}
  </div>
  {{else}}
  <div class="bg-muted rounded-lg p-8 text-center">
    <p class="text-sm text-muted-foreground">No inactive habits</p>
  </div>
  {{/if}}
</div>