<div class="mb-6">
  <a href="/habits/{{habit._id}}/stats" class="text-primary hover:text-primary/80"><- Back to stats</a>
      <div class="mt-4">
        <h1>{{habit.name}} Completions</h1>
        <p class="text-muted-foreground">See your completions and how you've been keeping up with your habit</p>
      </div>
</div>

<div class="mb-6">
  <h2 class="mb-2">All Completions</h2>
  {{#if completions.length}}
  <div class="card overflow-hidden">
    <div class="space-y-8">
      {{#each completions}}
      <div class="flex items-center justify-between">
        <div>
          <p class="font-semibold text-primary">Completed</p>
          <p class="text-sm text-muted-foreground">{{formatDate this.date}} at {{this.time}}</p>
        </div>
        <p class="text-sm text-muted-foreground">{{fromNow this.date}}</p>
      </div>
      {{/each}}
    </div>
  </div>
  {{else}}
  <div class="bg-muted rounded-lg p-8 text-center">
    <p class="text-sm text-muted-foreground">No completions yet</p>
  </div>
  {{/if}}
</div>