<div class="mb-6">
  <a href="/habits/{{habit._id}}" class="text-primary hover:text-primary/80"><- Back to habit</a>
      <h1 class="mt-4">Edit Habit</h1>
      <p class="text-muted-foreground mt-2">Update your habit details to better track your progress</p>
</div>

<form action="/habits/{{habit._id}}/edit" method="POST" class="space-y-6">
  {{!-- Hidden method field for PUT request --}}
  <input type="hidden" name="_method" value="PUT">

  <div class="space-y-2">
    <label for="name" class="text-sm font-medium">
      Habit name
      <span class="text-destructive">*</span>
    </label>
    <input type="text" name="name" id="name" required placeholder="e.g., Morning Exercise" value="{{habit.name}}"
      class="{{#if error.name}}border-destructive{{/if}}" />
    {{#if error.name}}
    <p class="text-destructive text-sm">{{error.name}}</p>
    {{/if}}
  </div>

  <div class="space-y-2">
    <label for="description" class="text-sm font-medium">
      Description
      <span class="text-destructive">*</span>
    </label>
    <textarea name="description" id="description" required placeholder="Describe your habit in detail"
      class="h-24 {{#if error.description}}border-destructive{{/if}}">{{habit.description}}</textarea>
    {{#if error.description}}
    <p class="text-destructive text-sm">{{error.description}}</p>
    {{/if}}
  </div>

  <div class="space-y-2">
    <label for="frequency" class="text-sm font-medium">
      Frequency
      <span class="text-destructive">*</span>
    </label>
    <select name="frequency" id="frequency" required class="{{#if error.frequency}}border-destructive{{/if}}">
      <option value="" {{#unless habit.frequency}}selected{{/unless}} disabled>Select frequency</option>
      <option value="daily" {{#if (eq habit.frequency "daily" )}}selected{{/if}}>Daily ðŸŒž</option>
      <option value="weekly" {{#if (eq habit.frequency "weekly" )}}selected{{/if}}>Weekly ðŸ“…</option>
      <option value="monthly" {{#if (eq habit.frequency "monthly" )}}selected{{/if}}>Monthly ðŸ“†</option>
    </select>
    {{#if error.frequency}}
    <p class="text-destructive text-sm">{{error.frequency}}</p>
    {{/if}}
  </div>

  <div class="space-y-2">
    <label for="status" class="text-sm font-medium">
      Status
      <span class="text-destructive">*</span>
    </label>
    <select name="status" id="status" required class="{{#if error.status}}border-destructive{{/if}}">
      <option value="active" {{#if (eq habit.status "active" )}}selected{{/if}}>Active</option>
      <option value="inactive" {{#if (eq habit.status "inactive" )}}selected{{/if}}>Inactive</option>
    </select>
    {{#if error.status}}
    <p class="text-destructive text-sm">{{error.status}}</p>
    {{/if}}
  </div>

  <div class="space-y-2">
    <label for="reminderTime" class="text-sm font-medium">
      Reminder (Optional)
    </label>
    <input type="time" name="reminderTime" id="reminderTime"
      value="{{#if habit.reminder}}{{formatTime habit.reminder.time}}{{/if}}"
      class="w-full {{#if error.reminderTime}}border-destructive{{/if}}" {{#unless isVerified}}disabled{{/unless}}>
    {{#if error.reminderTime}}
    <p class="text-destructive text-sm">{{error.reminderTime}}</p>
    {{/if}}
    <p class="text-sm text-muted-foreground">
      Set a reminder to help you stay on track with your {{habit.frequency}} habit
    </p>
    {{#unless isVerified}}
    <p class="text-sm text-muted-foreground">
      Note: You need to verify your email to set reminders. If you haven't verified your email yet, please do so
      <a href="/settings" class="text-primary hover:text-primary/80">here</a>.
    </p>
    {{/unless}}
  </div>

  {{#if error.general}}
  <div class="p-3 bg-destructive/10 border border-destructive/20 rounded-md">
    <p class="text-destructive font-medium text-sm">{{error.general}}</p>
  </div>
  {{/if}}

  <div class="flex justify-end gap-4">
    <a href="/habits/{{habit._id}}"
      class="px-4 py-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">
      Cancel
    </a>
    <button type="submit">
      Save changes
    </button>
  </div>
</form>