<h1>{{habit.name}}</h1>
<p>{{habit.description}}</p>
<p class="text-sm text-muted-foreground">Created at {{formatDate habit.createdAt}}</p>

<a href="/habits/{{habit._id}}/stats" class="hover:text-primary transition-colors">
  View Stats ->
</a>

<div class="my-10 grid grid-cols-3">
  <div class="col-span-1 justify-items-center">
    <p class="font-medium text-sm">Frequency</p>
    <p class="font-extrabold text-2xl">{{habit.frequency}}</p>
  </div>

  <div class="col-span-1 justify-items-center">
    <p class="font-medium text-sm">Streak</p>
    <p class="font-extrabold text-2xl"><span data-streak>{{habit.streak}}</span>ðŸ”¥</p>
  </div>

  <div class="col-span-1 justify-items-center">
    <p class="font-medium text-sm">Completions</p>
    <p class="font-extrabold text-2xl"><span data-completions>{{habit.totalCompletions}}</span>âœ…</p>
  </div>
</div>

<button onclick="markHabitComplete('{{_id}}')" data-complete-button {{#unless canComplete}}disabled{{/unless}}>
  {{#if canComplete}}
  Complete
  {{else}}
  Complete again {{habit.frequency}}
  {{/if}}
</button>