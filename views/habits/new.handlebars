<div class="mb-6">
  <a href="/habits" class="text-primary hover:text-primary/80"><- Back to habits</a>
      <h1 class="mt-4">Create New Habit</h1>
      <p class="text-muted-foreground mt-2">Start tracking a new habit and build your streak!</p>
</div>

<form action="/habits/new" method="post" class="space-y-6" data-form="new-habit">
  <div class="space-y-2">
    <label for="name" class="text-sm font-medium">
      Habit name
      <span class="text-destructive">*</span>
    </label>
    <input type="text" name="name" id="name" required placeholder="e.g., Morning Exercise" value="{{formData.name}}"
      data-input="name" class="{{#if errors}}{{#each errors}}{{#if (eq this.path.[0] "
      name")}}border-destructive{{/if}}{{/each}}{{/if}}" />
    <p class="text-destructive text-sm" data-error="name">
      {{#each errors}}{{#if (eq this.path.[0] "name")}}{{this.message}}{{/if}}{{/each}}
    </p>
  </div>

  <div class="space-y-2">
    <label for="description" class="text-sm font-medium">
      Description
      <span class="text-destructive">*</span>
    </label>
    <textarea name="description" id="description" required placeholder="Describe your habit in detail"
      data-input="description" class="h-24 {{#if errors}}{{#each errors}}{{#if (eq this.path.[0] "
      description")}}border-destructive{{/if}}{{/each}}{{/if}}">{{formData.description}}</textarea>
    <p class="text-destructive text-sm" data-error="description">
      {{#each errors}}{{#if (eq this.path.[0] "description")}}{{this.message}}{{/if}}{{/each}}
    </p>
  </div>

  <div class="space-y-2">
    <label for="frequency" class="text-sm font-medium">
      Frequency
      <span class="text-destructive">*</span>
    </label>
    <select name="frequency" id="frequency" required data-input="frequency"
      class="{{#if errors}}{{#each errors}}{{#if (eq this.path.[0] "
      frequency")}}border-destructive{{/if}}{{/each}}{{/if}}">
      <option value="" {{#unless formData.frequency}}selected{{/unless}} disabled>Select frequency</option>
      <option value="daily" {{#if (eq formData.frequency "daily" )}}selected{{/if}}>Daily ðŸŒž</option>
      <option value="weekly" {{#if (eq formData.frequency "weekly" )}}selected{{/if}}>Weekly ðŸ“…</option>
      <option value="monthly" {{#if (eq formData.frequency "monthly" )}}selected{{/if}}>Monthly ðŸ“†</option>
    </select>
    <p class="text-destructive text-sm" data-error="frequency">
      {{#each errors}}{{#if (eq this.path.[0] "frequency")}}{{this.message}}{{/if}}{{/each}}
    </p>
  </div>

  <div class="space-y-2">
    <label for="reminderTime" class="text-sm font-medium">
      Daily Reminder (Optional)
    </label>
    <input type="time" name="reminderTime" id="reminderTime" value="{{formData.reminderTime}}" data-input="reminderTime"
      class="w-full 
      {{#if errors}}{{#each errors}}{{#if (eq this.path.[0] "
      reminderTime")}}border-destructive{{/if}}{{/each}}{{/if}}" {{#unless isVerified}}disabled{{/unless}}>
    <p class="text-destructive text-sm" data-error="reminderTime">
      {{#each errors}}{{#if (eq this.path.[0] "reminderTime")}}{{this.message}}{{/if}}{{/each}}
    </p>
    <p class="text-sm text-muted-foreground">
      Set a daily reminder to help you stay on track
    </p>
    {{#unless isVerified}}
    <p class="text-sm text-muted-foreground">
      Note: You need to verify your email to set a daily reminder. If you haven't verified your email yet, please do so
      <a href="/settings" class="text-primary hover:text-primary/80">here</a>.
    </p>
    {{/unless}}
  </div>

  <div class="flex justify-end gap-4">
    <a href="/habits"
      class="px-4 py-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors">
      Cancel
    </a>
    <button type="submit"
      class="px-4 py-2 bg-primary text-primary-foreground hover:bg-primary/90 rounded-md transition-colors">
      Create Habit
    </button>
  </div>
</form>

<script src="/public/js/new-habit.js"></script>