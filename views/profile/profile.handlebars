<div class="mb-8">
  <div class="flex justify-center lg:justify-start">
    <div class="flex flex-col lg:flex-row justify-center items-center lg:items-start gap-4">
      <img src="https://api.dicebear.com/9.x/micah/svg?seed={{user.firstName}}%20{{user.lastName}}"
        class="w-20 h-20 rounded-full bg-primary/10 border border-secondary" />

      <div class="text-center lg:text-left">
        <h1>{{user.firstName}} {{user.lastName}}</h1>
        <p class="text-muted-foreground">Member since {{stats.memberSince}}</p>
        <a href="/settings">Account Settings -></a>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="card">
    <h3 class="text-sm font-medium text-muted-foreground mb-2">Total Habits</h3>
    <p class="text-2xl font-bold">{{stats.totalHabits}}</p>
    <p class="text-sm text-muted-foreground mt-1">{{stats.activeHabits}} active</p>
  </div>

  <div class="card">
    <h3 class="text-sm font-medium text-muted-foreground mb-2">All Time Streak</h3>
    <p class="text-2xl font-bold">{{stats.allTimeLongestStreak}}🔥</p>
    <p class="text-sm text-muted-foreground mt-1">Current streak: {{stats.longestActiveStreak}}</p>
  </div>

  <div class="card">
    <h3 class="text-sm font-medium text-muted-foreground mb-2">Total Completions</h3>
    <p class="text-2xl font-bold">{{stats.totalCompletions}}✅</p>
    <p class="text-sm text-muted-foreground mt-1">Over {{stats.daysAsMember}} days</p>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
  <div class="card">
    <h3 class="mb-4">Habit Types</h3>
    <div class="space-y-2">
      <div class="flex items-center justify-between">
        <span>Daily Habits 🌞</span>
        <span class="font-bold">{{stats.habitTypes.daily}}</span>
      </div>
      <div class="flex items-center justify-between">
        <span>Weekly Habits 📅</span>
        <span class="font-bold">{{stats.habitTypes.weekly}}</span>
      </div>
      <div class="flex items-center justify-between">
        <span>Monthly Habits 📆</span>
        <span class="font-bold">{{stats.habitTypes.monthly}}</span>
      </div>
    </div>
  </div>

  <div class="card">
    <h3 class="font-medium mb-4">Recent Activity</h3>
    {{#if stats.recentActivity.length}}
    <div class="space-y-3">
      {{#each stats.recentActivity}}
      <div class="flex items-center justify-between">
        <div>
          <a href="/habits/{{this.habitId}}" class="card-link inline-flex items-center justify-center gap-1">
            {{this.name}}
            <i data-lucide="chevron-right" class="size-4"></i>
          </a>
          <p class="text-sm text-muted-foreground">Completed</p>
        </div>
        <span class="text-sm text-muted-foreground">{{fromNow this.date}}</span>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class="text-muted-foreground">No recent activity</p>
    {{/if}}
  </div>
</div>

<div class="card">
  <h3 class="font-medium mb-4">Achievements</h3>
  <div class="text-center py-8 text-muted-foreground">
    <p>🏆 Achievements coming soon!</p>
    <p class="text-sm mt-2">Keep building those habits to earn badges and rewards</p>
  </div>
</div>